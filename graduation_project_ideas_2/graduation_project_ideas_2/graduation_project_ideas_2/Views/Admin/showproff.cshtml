@model graduation_project_ideas_2.Models.professors
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="container">
        <div class="row">
            <div class="col s12">
                <!-- table that shows volunteer record list -->
                <table class="table hoverable bordered" style=" background-color:inherit;border-radius:10px;margin-top:40px;">
                    <thead>
                        <tr style="color:black;font-size:20px;font-weight:bold;">
                            <th id="f" style="width:300px;">Name</th>
                            <th id="f">Email</th>
                            <th id="f">Username	</th>
                            <th id="f">Delete</th>
                        </tr>
                    </thead>
                 
                    <tbody>
                    
                        @for (int i = 0 ; i < ViewBag.numberRow  ; i++ )
                        {
                        <tr>
                            <td>@ViewBag.profs[i].fullname</td>
                            <td class="breakEmail">@ViewBag.profs[i].email</td>
                            <td>@ViewBag.profs[i].username</td>
                            <td>
                                @Html.ActionLink("delete","Add_Del_Pro",new { @id=@ViewBag.profs[i].Id})
                            </td>
                        </tr>
}
                    </tbody>
                </table>
                <dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)"></dir-pagination-controls>
            </div> <!-- end col s12 -->
        </div> <!-- end row -->
    </div> <!-- end container -->


</div>



