                    </td>
                    <td>
                        @*<input type="text" id="fullname" name="fullname" value="@Html.DisplayFor(model => model.users.fullname)" style="width:500px; border-radius:10px;" />*@
                        @Html.EditorFor(model => model.users.fullname, new { HtmlAttributes = new { @type = "text", @id = "fullname", @name = "fullname", @style = "width:500px; border-radius:10px;" } })
