                        @Html.ValidationMessageFor(model => model.users.username, "", new { @class = "text-danger" })
                        @* <input type="text" id="username" name="username" required value="@Html.DisplayFor(model => model.users.username)" style="width:500px; border-radius:10px;" />*@
                    </td>
                </tr>

                <tr>
                    <td>
                        <label style="color:white;">email</label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.users.email, new { HtmlAttributes = new {@type= "email" , @id = "email", @name = "email", @style = "width:500px; border-radius:10px;" } })
                        @Html.ValidationMessageFor(model => model.users.email, "", new { @class = "text-danger" })
                        @*<input type="text" id="email" name="email" required value="@Html.DisplayFor(model => model.users.email)" style="width:500px; border-radius:10px;" />*@
                    </td>
                </tr>

                <tr>
                    <td>
                        <label style="color:white;">password</label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.users.password, new { HtmlAttributes = new { @type = "password", @id = "password", @name = "password", @style = "width:500px; border-radius:10px;" } })
                        @Html.ValidationMessageFor(model => model.users.password, "", new { @class = "text-danger" })
                        @*<input type="password" id="password" name="password" required value="@Html.DisplayFor(model => model.users.password)" style="width:500px; border-radius:10px;" />*@
                    </td>
                </tr>


                <tr>
                    <td>
                        <label style="color:white;">gpa</label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.std_gpa, new { HtmlAttributes = new { @type = "number", @id = "std_gpa", @name = "std_gpa", @style = "width:500px; border-radius:10px;" } })
                        @Html.ValidationMessageFor(model => model.std_gpa, "", new { @class = "text-danger" })
                        @*<input type="number" id="std_gpa" name="std_gpa" required value=" @Html.DisplayFor(model => model.std_gpa )" style="width:500px; border-radius:10px;" />*@
                    </td>
                </tr>
                <tr>
                    <td>
                        <label style="color:white;">skills</label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.std_skills, new { HtmlAttributes = new { @id = "std_skills", @name = "std_skills", @style = "width:500px; border-radius:10px;" } })
                        @Html.ValidationMessageFor(model => model.std_skills, "", new { @class = "text-danger" })
                        @*<input type="text" id="std_skills" name="std_skills" required value="@Html.DisplayFor(model => model.std_skills)" style="width:500px; border-radius:10px;" />*@
                    </td>
                </tr>
                <tr>
                    <td>
                        <label style="color:white;">level</label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.std_level, new { HtmlAttributes = new {@type="number", @id = "std_level", @name = "std_level", @style = "width:500px; border-radius:10px;" } })
                        @Html.ValidationMessageFor(model => model.std_level, "", new { @class = "text-danger" })
                        @*<input type="text" id="std_trans" name="std_level" required value="@Html.DisplayFor(model => model.std_level)" style="width:500px; border-radius:10px;" />*@
                    </td>
                </tr>

            </table>
            <button type="submit" style=" width:200px; border-radius:10px; background-color:#88a3b8;padding:5px;">Edit </button>

}
