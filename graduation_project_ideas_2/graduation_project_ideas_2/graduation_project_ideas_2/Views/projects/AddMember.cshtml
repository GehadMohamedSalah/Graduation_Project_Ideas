            <option value="2">Level 2</option>
            <option value="3">Level 3</option>
            <option value="4">Level 4</option>
        </select>*@
        @Html.EditorFor(model => model.mem_gpa , new { @type = "text", @name = "mem_gpa", @placeholder = "GPA" })
        @Html.TextAreaFor(model => model.mem_skills , new { @name = "mem_skills" ,@placeholder = "Write skills" })
        @Html.HiddenFor(model => model.teamleader_id , new { @id = "teamleader_id" , @value = @Session["userid"] })
        <input type="hidden" id="teamleader_id" value="@Session["userid"]" />
        @Html.EditorFor(model => model.mem_trans , new { @name = "mem_trans" })
        @*<input type="submit" class="addNewMember" value="Add New Member" name="addMember" style="width:150px" />*@
